<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="300dp"
    app:cardCornerRadius="25dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/llContent">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="185dp"
        android:layout_height="300dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/id_image"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/c"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <TextView
            android:id="@+id/id_item"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="item name"
            android:layout_below="@id/id_image"
            android:maxLength="20"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/id_price"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="price:"
            android:layout_below="@id/id_item"
            android:maxLength="20"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/id_rate"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="399"
            android:layout_below="@id/id_item"
            android:layout_toRightOf="@id/id_price"
            android:maxLength="20"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/imgIsFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/id_image"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_action_fav" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
